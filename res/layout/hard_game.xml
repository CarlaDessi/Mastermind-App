<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ff98ed"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title1" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.84"
        android:cacheColorHint="#ff98ed"
        android:divider="#FFFFFF"
        android:dividerHeight="0px"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" >
    </ListView>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d57aff"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/buttonBlue"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/blue" />

            <ImageButton
                android:id="@+id/buttonGreen"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/green" />

            <ImageButton
                android:id="@+id/buttonRed"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/red" />

            <ImageButton
                android:id="@+id/buttonPink"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/pink" />

            <ImageButton
                android:id="@+id/buttonYellow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/yellow" />

            <ImageButton
                android:id="@+id/buttonOrange"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d57aff" >

            <ImageView
                android:id="@+id/empty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/empty" />

            <ImageView
                android:id="@+id/empty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/empty" />

            <ImageView
                android:id="@+id/empty3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/empty" />

            <ImageView
                android:id="@+id/empty4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/empty" />

            <ImageView
                android:id="@+id/empty5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/empty" />

            <Button
                android:id="@+id/ClearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Clear"
                android:textStyle="bold" />

            <Button
                android:id="@+id/GuessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="Guess"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>